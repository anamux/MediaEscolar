<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <fragment
        android:id="@+id/nav_host_fragment_content_main"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/nav_graph" />

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="@string/m_dia_escolar"
        android:textSize="24sp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtBimestre1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtTitulo"
        android:layout_below="@+id/txtTitulo"
        android:layout_marginTop="17dp"
        android:text="@string/_1_bimestre"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/txtMateria1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtBimestre1"
        android:layout_marginStart="29dp"
        android:layout_marginTop="24dp"
        android:text="@string/mat_ria" />

    <TextView
        android:id="@+id/txtNotaProva1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtBimestre1"
        android:layout_alignTop="@+id/txtMateria1"
        android:text="@string/nota_da_prova" />

    <TextView
        android:id="@+id/txtNotaTrabalho1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/txtNotaProva1"
        android:layout_marginEnd="42dp"
        android:text="@string/nota_trabalho" />

    <EditText
        android:id="@+id/editMateria1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtMateria1"
        android:layout_below="@+id/txtMateria1"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/hint_mat_ria"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editNotaProva1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtNotaProva1"
        android:layout_alignTop="@+id/editMateria1"
        android:ems="10"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/editNotaTrabalho1"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtNotaTrabalho1"
        android:layout_alignTop="@+id/editNotaProva1"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/txtMedia1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editMateria1"
        android:layout_below="@+id/editMateria1"
        android:layout_marginTop="24dp"
        android:text="@string/m_dia"
        android:textSize="20sp"
        android:textColor="@color/design_default_color_primary_dark"/>

    <TextView
        android:id="@+id/txtSituacao1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editNotaProva1"
        android:layout_alignTop="@+id/txtMedia1"
        android:text="@string/situa_o"
        android:textSize="20sp"
        android:textColor="@color/design_default_color_primary_dark"/>


    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtMedia1"
        android:layout_below="@+id/txtSituacao1"
        android:layout_marginTop="33dp"
        android:text="@string/calcular" />



</RelativeLayout>